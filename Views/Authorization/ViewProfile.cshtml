@model Gbc_Travel_Group63.Models.ApplicationUser
<h2>User Profile</h2>

<div>
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
    <p><strong>Preferences:</strong> @Model.Preferences</p>
    @if (Model.ProfilePicture != null)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="Profile Picture" />
    }
    else
    {
        <p>no profile picture</p>
    }
</div>

<a asp-action="EditProfile">Edit Profile</a>
